<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TiposCertificados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conozca las diferencias entre los Certificados que puede comprar en esta app, para que tenga seguridad de elegir el que necesita."
            android:textColor="#000"
            android:justificationMode="inter_word"
            android:textSize="16sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Certificado de Existencia y Representación Legal"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorRojo"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/buttonCertificadoExistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRojo"
                android:textColor="@color/colorWhite"
                android:text="Generar Certificado"
                android:onClick="pdfView"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Aplica para sociedades y entidades sin ánimo de lucro. Informa cual es el objetivo social, vigencia, capitales, nombre e identificación de los representantes legales y las facultades de estos."
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:textColor="#000"
                android:textSize="16sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Certificado de Matrícula Mercantil"
                android:textColor="@color/colorRojo"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:id="@+id/buttonCertificadoMercantil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRojo"
                android:textColor="@color/colorWhite"
                android:text="Generar Certificado" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Aplica para comerciantes personas naturales y todo tipo de establecimiento de comercio. Indica los datos diligenciados en el formulario de matrícula o renovación."
                android:justificationMode="inter_word"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorRojo"
                android:text="Certificado de Libros"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/buttonCertificadoLibros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRojo"
                android:textColor="@color/colorWhite"
                android:text="Generar Certificado" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Indica cuales libros tiene inscritos la sociedad o entidad sin ánimo de lucro."
                android:justificationMode="inter_word"
                android:textColor="#000"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>