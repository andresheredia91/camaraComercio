<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/lg1">

        </ImageView>

        <GridLayout
            android:layout_width="350dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:rowCount="4">


            <androidx.cardview.widget.CardView

                android:id="@+id/certificados"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/buttoncertificados"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/g" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginTop="1dp"
                        android:text="Certificados"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/renovacion"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/buttonrenovacion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/certificados" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginTop="1dp"
                        android:text="Renovación"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/consultanombres"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/buttonNombres"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/consultadenombres" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="Consulta de Nombres"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/consultatramites"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/buttonTramites"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/reloj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:text="Consulta de Trámites"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/nuestroseventos"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/buttonEventos"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/eventos1" />

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:text="Nuestros Eventos"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/nuestrassedes"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/buttonSedes"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/ubicacion" />

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:text="Nuestras Sedes"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/imageEvento"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/digital"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>